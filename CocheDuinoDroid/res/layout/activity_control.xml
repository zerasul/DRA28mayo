<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ControlActivity" >

    <EditText
        android:id="@+id/edtDisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtDisp"
        android:layout_alignParentRight="true"
        android:text="@string/conectar" />

    <ImageButton
        android:id="@+id/btnarriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtDisp"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/btnderecha"
        android:src="@drawable/arriba" />

    <ImageButton
        android:id="@+id/btnabajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnderecha"
        android:src="@drawable/abajo" />

    <ImageButton
        android:id="@+id/btnderecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnizquierda"
        android:src="@drawable/derecha" />

    <ImageButton
        android:id="@+id/btnizquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnarriba"
        android:layout_marginTop="36dp"
        android:src="@drawable/izquierda" />

    <ImageButton
        android:id="@+id/btnparar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnarriba"
        android:layout_alignTop="@+id/btnderecha"
        android:src="@drawable/stop" />

</RelativeLayout>